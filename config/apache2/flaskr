<VirtualHost *:80>
    WSGIDaemonProcess flaskr
    WSGIScriptAlias / /vagrant/config/apache2/flaskr.wsgi

    <Directory /vagrant>
        WSGIProcessGroup flaskr
        WSGIApplicationGroup %{GLOBAL}
        WSGIScriptReloading On
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
