<VirtualHost *:80>
    WSGIDaemonProcess flaskr
    WSGIScriptAlias / /var/www/flaskr.wsgi

    <Directory /var/www/>
        WSGIProcessGroup flaskr
        WSGIApplicationGroup %{GLOBAL}
        WSGIScriptReloading On
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
